@model CoreCine.Sala
@using CoreCine
@{
    ViewBag.Title = "FormSala";
    List<Cine> ListadoCine = (List<Cine>)ViewBag.ListadoCine;

}


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sala</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.NombreSala, "Nombre de la sala", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreSala, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreSala, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Capacidad, "Capacidad de la sala", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Capacidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Capacidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tipo, "Tipo de la sala", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tipo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodCine, "Cine", htmlAttributes: new { @class = "control-label col-md-2" })
            <select name="CodCine">
                @foreach (Cine item in ListadoCine)
                {
                    <option value="@item.CodCine">@item.NombreCine</option>
                }
            </select>
            @*<div class="col-md-10">
                @Html.DropDownList("CodCine", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodCine, "", new { @class = "text-danger" })
            </div>*@
        </div>

       
    </div>
}

