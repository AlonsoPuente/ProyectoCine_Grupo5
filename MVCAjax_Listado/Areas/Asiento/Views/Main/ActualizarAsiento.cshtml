@model CoreCine.Asiento
@using CoreCine
@{
    ViewBag.Title = "ActualizarAsiento";
    List<Sala> ListaSala = (List<Sala>)ViewBag.ListadoSala;

}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Asiento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CodAsiento)

        <div class="form-group">
            @Html.LabelFor(model => model.DescripcionAsiento, "Descripción del asiento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescripcionAsiento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescripcionAsiento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodSala, "Sala", htmlAttributes: new { @class = "control-label col-md-2" })
            <select name="CodSala">
                @foreach (Sala item in ListaSala)
                {
                    <option value="@item.CodSala">@item.NombreSala</option>
                }
            </select>

             @*<div class="col-md-10">
                @Html.DropDownList("CodSala", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodSala, "", new { @class = "text-danger" })
            </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoAsiento, "Tipo de asiento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TipoAsiento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipoAsiento, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Disponible, "Disponibilidad", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Disponible)
                    @Html.ValidationMessageFor(model => model.Disponible, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

