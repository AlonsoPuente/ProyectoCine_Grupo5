@model IEnumerable<CoreCine.Funcion>
@using CoreCine
@{

    List<Pelicula> ListadoPelicula = (List<Pelicula>)ViewBag.ListadoPelicula;

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.HoraInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoraFin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaFuncion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>

            @Html.DisplayNameFor(model => model.Pelicula.NombrePelicula)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoraInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraFin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaFuncion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio)
        </td>
        <td>
            @foreach (Pelicula item2 in ListadoPelicula.Where(z => z.CodPelicula == item.CodPelicula).ToList())
            {
                @item2.NombrePelicula
            }
        </td>
        <td>


            @Html.ActionLink("Actualizar Funcion", "ActualizarFuncion", "Main", new { area = "Funcion", CodFuncion = item.CodFuncion }, null) |
            @Html.ActionLink("Eliminar Funcion", "Eliminar", new { area = "Funcion", CodFuncion = item.CodFuncion }, null)


        </td>
    </tr>
}

</table>
