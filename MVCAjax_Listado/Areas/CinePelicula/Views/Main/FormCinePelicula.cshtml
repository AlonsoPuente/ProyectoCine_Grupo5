@model CoreCine.CinePelicula
@using CoreCine
@{
    ViewBag.Title = "FormCinePelicula";
    List<Cine> ListadoCine = (List<Cine>)ViewBag.ListadoCine;

    List<Pelicula> ListadoPelicula = (List<Pelicula>)ViewBag.ListadoPelicula;

}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CinePelicula</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CodCine, "Cine", htmlAttributes: new { @class = "control-label col-md-2" })
            <select name="CodCine">
                @foreach (Cine item in ListadoCine)
                {
                    <option value="@item.CodCine">@item.NombreCine</option>
                }
            </select>
            @*<div class="col-md-10">
                @Html.DropDownList("CodCine", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodCine, "", new { @class = "text-danger" })
            </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodPelicula, "Película", htmlAttributes: new { @class = "control-label col-md-2" })
            <select name="CodPelicula">
                @foreach (Pelicula item in ListadoPelicula)
                {
                    <option value="@item.CodPelicula">@item.NombrePelicula</option>
                }
            </select>
            @*<div class="col-md-10">
                @Html.DropDownList("CodPelicula", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodPelicula, "", new { @class = "text-danger" })
            </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EnCartelera, "¿Está en cartelera?", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.EnCartelera)
                    @Html.ValidationMessageFor(model => model.EnCartelera, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        
    </div>
}

