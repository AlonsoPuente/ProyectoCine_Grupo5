@model IEnumerable<CoreCine.Pedido>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CodTicket)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CodTicket)
        </td>
        <td>
            @Html.ActionLink("ActualizarPedido", "ActualizarPedido", "Main" , new { area = "Pedido", CodPedido = item.CodPedido }, null) |
            @Html.ActionLink("Eliminar Pedido", "Eliminar", new { area = "Pedido",  CodPedido = item.CodPedido }, null )
        </td>
    </tr>
}   

</table>
