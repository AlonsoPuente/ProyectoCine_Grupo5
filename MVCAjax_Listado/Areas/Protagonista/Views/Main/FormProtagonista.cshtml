@model CoreCine.Protagonista

@using CoreCine
@{
    ViewBag.Title = "FormProtagonista";
    List<Interprete> ListadoInterprete = (List<Interprete>)ViewBag.ListadoInterprete;
    List<Pelicula> ListadoPelicula = (List<Pelicula>)ViewBag.ListadoPelicula;
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Protagonista</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CodInterprete, "Intérprete", htmlAttributes: new { @class = "control-label col-md-2" })
            <select name="CodInterprete">
                @foreach (Interprete item in ListadoInterprete)
                {
                    <option value="@item.CodInterprete">@item.Paterno</option>
                }
            </select>
            @*<div class="col-md-10">
                @Html.DropDownList("CodInterprete", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodInterprete, "", new { @class = "text-danger" })
            </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CodPelicula, "Película", htmlAttributes: new { @class = "control-label col-md-2" })
            <select name="CodPelicula">
                @foreach (Pelicula item in ListadoPelicula)
                {
                    <option value="@item.CodPelicula">@item.NombrePelicula</option>
                }
            </select>
            @*<div class="col-md-10">
                @Html.DropDownList("CodPelicula", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CodPelicula, "", new { @class = "text-danger" })
            </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NombreProtagonista, "Nombre del protagonista", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreProtagonista, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreProtagonista, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EsPrincipal, "¿Es principal?", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.EsPrincipal)
                    @Html.ValidationMessageFor(model => model.EsPrincipal, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


    </div>
}


